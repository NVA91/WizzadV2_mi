---
- name: Benutzergruppe admin_group anlegen
  group:
    name: admin_group
    state: present

- name: Benutzer admin_user anlegen und zur Gruppe hinzufÃ¼gen
  user:
    name: admin_user
    groups: admin_group
    append: yes
    state: present

- name: SSH-Key fÃ¼r admin_user setzen
  authorized_key:
    user: admin_user
    key: "{{ lookup('file', '/root/.ssh/id_rsa.pub') }}"
    state: present
