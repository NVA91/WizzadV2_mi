---
- name: Backup des gesamten Proxmox-Ansible-Projekts in ein .tar.gz Archiv
  archive:
    path:
      - /root/proxmox-ansible/
    dest: /srv/transfer/backup/proxmox-ansible-backup_{{ ansible_date_time.iso8601_basic_short }}.tar.gz
    format: gz
    remove: no

- name: Backup im Transfer-Ordner anzeigen
  shell: ls -lh /srv/transfer/backup/
  register: backup_result

- name: Backup-Ausgabe anzeigen
  debug:
    var: backup_result.stdout_lines
